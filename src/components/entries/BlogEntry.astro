---
import { Image } from "astro:assets";
const { title, url, description, pubDate, author, image, tags } = Astro.props;
---

<article class="flex flex-col flex-1 h-full group">
  <a href={url} title={title} class="block overflow-hidden rounded-2xl">
    <div class="block w-full transition-transform duration-500 group-hover:scale-105">
      <Image
        width={1200}
        height={630}
        src={image}
        alt={title}
        class="object-cover w-full h-full bg-center aspect-12/8 shadow-sm"
      />
    </div>
  </a>

  <div class="mt-6 flex flex-col flex-grow">
    <div class="flex items-center space-x-3 text-[10px] uppercase tracking-widest text-accent-700 font-semibold mb-3">
      <span>{author}</span>
      <span class="w-1 h-1 rounded-full bg-base-300"></span>
      <time datetime={pubDate}>{pubDate}</time>
    </div>

    <h3 class="text-xl font-display font-bold text-base-900 leading-tight group-hover:text-accent-800 transition-colors">
      <a href={url}>{title}</a>
    </h3>

    <p class="mt-3 text-sm text-base-600 line-clamp-2 leading-relaxed italic">
      {description}
    </p>
    
    <div class="mt-auto pt-4">
       <div class="flex flex-wrap gap-2">
        {tags && tags.slice(0, 2).map((tag) => (
          <span class="text-[10px] px-2 py-0.5 rounded-full bg-base-100 text-base-500 border border-base-200">
            {tag}
          </span>
        ))}
      </div>
    </div>
  </div>
</article>
