<div
  id="navigation-container"
  class="relative flex flex-col w-full mx-auto rounded-xl md:rounded-full md:items-center md:justify-between md:flex-row"
>
  <div class="flex flex-row items-center justify-between py-2 md:justify-start">
    <a class="text-xl font-display font-bold tracking-tight text-base-900 inline-flex items-center gap-2 group" href="/">
      <img src="/logo-icon.svg" alt="Logo" class="w-8 h-8 group-hover:rotate-12 transition-transform duration-300" />
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-accent-600 to-secondary-600">Entryway Storage</span>
    </a>
    <button
      id="menu-button"
      aria-label="Toggle menu"
      class="inline-flex items-center justify-center p-2 text-base-900 hover:text-accent-600 focus:outline-none focus:text-base-900 md:hidden"
    >
      <svg
        id="menu-icon"
        class="w-6 h-6"
        stroke="currentColor"
        fill="none"
        viewBox="0 0 24 24"
      >
        <path
          id="icon-open"
          class="inline-flex"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
        <path
          id="icon-close"
          class="hidden"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>
  <nav
    id="mobile-menu"
    class="flex-col justify-center flex-grow hidden py-12 md:py-0 md:flex md:items-end md:flex-row"
  >
    <div
      class="items-center justify-center list-none space-y-2 md:space-y-0 md:ml-auto md:inline-flex md:text-left gap-6"
    >
      <a
        href="/"
        class="text-base-600 hover:text-accent-700 text-sm font-medium transition-colors"
      >
        Journal
      </a>
      <a
        href="/tags"
        class="text-base-600 hover:text-accent-700 text-sm font-medium transition-colors"
      >
        Categories
      </a>

      <a
        href="https://github.com/michael-andreuzza/microblog"
        class="py-2 px-4 text-sm rounded-full bg-accent-600 hover:bg-accent-700 text-white transition-all duration-300 shadow-sm hover:shadow-md"
      >
        Subscribe
      </a>
    </div>
  </nav>
</div>

<script is:inline>
  (function() {
    const init = () => {
      const button = document.getElementById('menu-button');
      const menu = document.getElementById('mobile-menu');
      const iconOpen = document.getElementById('icon-open');
      const iconClose = document.getElementById('icon-close');
      
      if (button && menu) {
        button.addEventListener('click', () => {
          const isHidden = menu.classList.contains('hidden');
          menu.classList.toggle('hidden', !isHidden);
          menu.classList.toggle('flex', isHidden);
          
          if (iconOpen && iconClose) {
            iconOpen.classList.toggle('hidden', isHidden);
            iconOpen.classList.toggle('inline-flex', !isHidden);
            iconClose.classList.toggle('hidden', !isHidden);
            iconClose.classList.toggle('inline-flex', isHidden);
          }
        });
      }
    };
    
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
  })();
</script>
