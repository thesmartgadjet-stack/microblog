---
const { 
  title = "Entryway Essentials", 
  description = "A guide to entryway organization", 
  image = "/og-image.jpg",
  size = "md"
} = Astro.props;

const iconClass = size === "lg" ? "w-6 h-6" : "w-5 h-5";
const containerClass = size === "lg" ? "p-3" : "p-2";

const url = encodeURIComponent(Astro.url.href);
const shareTitle = encodeURIComponent(title);
const shareDescription = encodeURIComponent(description);
const shareImage = encodeURIComponent(new URL(image, Astro.site || Astro.url.origin).href);

const socialLinks = [
  {
    name: "Facebook",
    url: `https://www.facebook.com/sharer/sharer.php?u=${url}`,
    icon: `<svg class="${iconClass}" fill="currentColor" viewBox="0 0 24 24"><path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/></svg>`,
    color: "text-blue-600 hover:bg-blue-50"
  },
  {
    name: "X",
    url: `https://twitter.com/intent/tweet?url=${url}&text=${shareTitle}`,
    icon: `<svg class="${iconClass}" fill="currentColor" viewBox="0 0 24 24"><path d="M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932 6.064-6.932zm-1.292 19.494h2.039L6.486 3.24H4.298L17.609 20.647z"/></svg>`,
