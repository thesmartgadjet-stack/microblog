---
import BaseLayout from "@/layouts/BaseLayout.astro";
import BlogEntries from "@/components/entries/BlogEntry.astro";
import Cta from "@/components/global/Cta.astro";
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
const tags = [...new Set(allPosts.map((post) => post.data.tags || (post.data.category ? [post.data.category] : [])).flat())];
// Sort posts by date in descending order (newest first)
const sortedPosts = allPosts.sort(
  (a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate)
);
---

<BaseLayout>
  <section>
    <div class="py-20 lg:py-32">
      <div class="max-w-2xl">
        <h1
          class="text-5xl lg:text-6xl font-display font-medium text-base-900 leading-[1.1]"
        >
          Your guide to <span class="italic text-accent-700">entryway</span> organization & hallway design.
        </h1>
        <p class="mt-6 text-lg text-base-600 leading-relaxed max-w-xl">
          Discover curated storage solutions and design inspiration to transform your home's first impression into a functional masterpiece.
        </p>
      </div>
      
      <div class="flex flex-wrap gap-2 mt-12 pb-12 border-b border-base-200">
        <span class="text-[10px] uppercase tracking-widest text-base-400 font-bold mr-2 self-center">Explore:</span>
        {
          tags.map((tag) => (
            <a
              class="px-4 py-1.5 rounded-full bg-white border border-base-200 text-xs font-medium text-base-600 hover:border-accent-400 hover:text-accent-700 hover:shadow-sm transition-all"
              href={`/tags/${tag}`}
            >
              {tag}
            </a>
          ))
        }
      </div>
      <div class="grid grid-cols-1 mt-16 gap-x-12 gap-y-20 sm:grid-cols-2">
        {
          sortedPosts.map((post) => (
            <BlogEntries
              url={"/posts/" + post.slug}
              alt={post.data.title}
              tags={post.data.tags || (post.data.category ? [post.data.category] : [])}
              title={post.data.title}
              author={post.data.author}
              image={typeof post.data.image === 'string' ? post.data.image : post.data.image.url}
              description={post.data.description}
              pubDate={new Date(post.data.pubDate).toLocaleDateString("en-US", {
                year: "numeric",
                month: "short",
                day: "numeric",
              })}
            />
          ))
        }
      </div>
    </div>
  </section>
  <Cta />
</BaseLayout>
